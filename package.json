{
  "name": "prueba_marvel",
  "version": "1.0.0",
  "description": "API Marvel",
  "main": "index.js",
  "author": "Santiago Carrasco <jsanticc@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write \"**/*.{js,ts}\"",
    "lint": "eslint . --ext ts",
    "build": "tsc",
    "dev": "tsc-watch --onSuccess \"cross-env NODE_ENV=development node dist/index.js\"",
    "start": "cross-env NODE_ENV=production node dist/index.js"
  },
  "lint-staged": {
    "*.@(ts)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/helmet": "^0.0.48",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "axios": "^0.20.0",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "mongoose": "^5.10.3",
    "morgan": "^1.10.0",
    "redis": "^3.0.2"
  }
}
